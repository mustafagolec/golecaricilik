            <a href="/passwordreset" class="generalbuttons">Şifremi unuttum</a><br>
            <a href="/users/register" class="generalbuttons">Yeni hesap oluştur</a>
            </div>
            </form>
            {{/unless}}
            {{#if displayLink}}
            <form class="yazilabilir" action="/users/login" method="POST">
                <h1 style="font-size: 25px;">Oturum Ayarları</h1>
            <div class="loginsection" style="display: flex; margin: 10px;">
                <a href="/passwordreset" class="generalbuttons">Şifre Değiştir</a>
                <a href="/users/logout" class="generalbuttons">Çıkış Yap</a>
            </div>
            </form>
            {{/if}}
        </div>

    </section>