        <div class="page-middle">
            {{#if sessionFlash.message}}
                    <h1 style="font-size: 30px;">{{sessionFlash.message}}</h1>
            {{/if}}

            <h1 style="font-size: 30px;">Hesap Ayarları</h1>
            {{#unless displayLink}}
            <form class="yazilabilir" action="/users/login" method="POST">
